<Window x:Class="kartkowka04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kartkowka04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>
        <TextBlock>Wybierz na jakich liczbach bedzie operacja</TextBlock>
        <RadioButton GroupName="rodzaj_radio" x:Name="int_radio" IsChecked="True">Typ calkowity</RadioButton>
        <RadioButton GroupName="rodzaj_radio" x:Name="float_radio" IsChecked="True">Typ rzeczywisty</RadioButton>

        <TextBlock>Podaj 1 liczbe</TextBlock>
        <TextBox x:Name="liczba1_box"></TextBox>
        <TextBlock>Podaj 2 liczbe</TextBlock>
        <TextBox x:Name="liczba2_box"></TextBox>
        
 
        <Button Click="Button_Click">Oblicz</Button>
    </StackPanel>
    
    
</Window>
